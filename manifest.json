{
    "name": "Smart Accents",
    "description": "Get accents delivered",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "action": {
        "default_popup": "src/html/popup.html"
    },
    "commands": {
        "e_grave": {
            "suggested_key": {
                "default": "Ctrl+Shift+K"
            },
            "description": "Copies to e grave accent to your clipboard"
        },
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q"
            }
        }
    }
  }